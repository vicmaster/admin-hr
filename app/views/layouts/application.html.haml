  %head
    %title Admin HR
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body.login-page
    %header#main-header
      = render 'shared/navbar'
      %p.notice= notice
      %p.alert= alert
      .navbar.navbar-inverse
        = link_to 'Welcome', '#'
        = link_to('Sign out', destroy_admin_session_path, :method => :delete)
    %section#main

      = yield
    %footer#main-footer
      footer
