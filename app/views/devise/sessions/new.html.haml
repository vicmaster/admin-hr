.login-form-container
  .login-form-container-inner
    .notice-message
      %span.icon
      %p.notice= notice
      %p.alert= alert
    .box-header
      %p
        %h2 Dedicated HR Manager
    .box-body
      = form_tag admin_session_path do
        = label_tag(:admin_email, 'Correo')
        = text_field_tag 'admin[email]'
        = label_tag(:admin_password, 'ContraseÃ±a')
        = password_field_tag 'admin[password]'
        %br
        = check_box_tag 'admin[remember_me]'
        = label_tag 'admin[remember_me]', 'Remember me'
        %button.btn.btn-primary Sign in
        %br
    .box-footer
      #signin-footer
        = render "devise/shared/links"
        %a{:href => "#", :rel => "gapps", :style => ""} Sign in With Google Apps
        %a{:href => "https://www.crowdinteractive.com", :style => "", :title => "Crowd Interactive"} Powered by Crowdint
